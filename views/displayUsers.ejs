<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <link rel="stylesheet" href="./css/styles.css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>
    <%= title %>
  </title>
</head>

<body class="bg-green-100">
  <div class="flex justify-center">
    <div class="grid grid-cols-2 gap-4">
      <div class="p-4 bg-white shadow-lg rounded-lg">
        <%
        let countA = 0;
        let countU = 0;
        let countS = 0;
        users.forEach(user => {
          if (user.role === 'admin') {
            countA++;
          }
          else if(user.role === 'superadmin'){
            countS++
          } else{
            countU++;
          }
        }); 
        %>
        <h2 class="text-xl text-gray-600 font-bold mb-4">Admins List
          <span id="count-admin" class="border boarder-gray-300 rounded px-2 py-1 ml-2 text-sm text-gray-600 bg-purple-50">A: <%= countA %>
        </span></h2><span id="count-admin" class="border boarder-gray-300 rounded px-2 py-1 ml-2 text-sm text-gray-600 bg-purple-50">S: <%= countS %>
        </span></h2>
        <% users.forEach(admin => { %>
          <% if (admin.role === 'admin' || admin.role === 'superadmin') { %>
          <div class="flex justify-between items-center mb-2">
            <span class="text-gray-900 font-medium"><%= admin.firstName %></span>
            <span class="text-gray-600"><%= admin.email %></span>
          </div>
          <% } %>
        <% }); %>
      </div>
  
      <div class="p-4 bg-white shadow-lg rounded-lg">
        <h2 class="text-xl font-bold text-gray-600 mb-4">Users List<span id="count-user" class="border boarder-gray-300 rounded px-2 py-1 ml-2 text-sm text-gray-600 bg-purple-50"><%= countU %>
        </span></h2>
        <% users.forEach(user => { %>
          <% if (user.role === 'user') { %>
          <div class="flex justify-between items-center mb-2">
            <span class="text-gray-900 font-medium"><%= user.firstName %></span>
            <span class="text-gray-600"><%= user.email %></span>
          </div>
          <% } %>
        <% }); %>
      </div>
      <button
      class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
      <a href="/scheduler/" class="text-gray-700">Go back</a>
    </button>
    </div>
  </div>
  
      
</body>

</html>